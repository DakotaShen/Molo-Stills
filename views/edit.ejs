<% include partials/header %>

<h1 class = "text-center" id = "registerColor">Edit Your Movie Still</h1>
<div style = "width: 30%; margin-top: 25px;" class = "container">
    <form action = "/movies/<%= movie._id%>?_method=PUT" method = "POST">
        <div class = "form-group">
            <label>Name</label>
            <input type = "text" value = "<%= movie.name%>" name = "name" class = "form-control">
        </div>
        <div class = "form-group">
            <label>Image</label>
            <input type = "text" value = "<%= movie.image%>" name = "image" class = "form-control">
        </div>
        <div class = "form-group">
            <label>Description</label>
            <input type = "text" value = "<%= movie.descrip%>" name = "descrip" class = "form-control">
        </div>
        <div class = "form-group">
            <button class = "btn btn-primary btn-block"> Submit! </button>
        </div>
        <div>
            <a href = "/movies/<%= movie._id%>"Go back to movie</a>
        </div>
    </form>
</div>


<% include partials/footer %>