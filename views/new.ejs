<% include partials/header %>

<h1 class = "text-center" id = "registerColor">Creat a New Movie Still</h1>
<div style = "width: 30%; margin-top: 25px;" class = "container">
    <form action = "/movies" method = "POST">
        <div class = "form-group">
            <label>Name</label>
            <input type = "text" placeholder = "name" name = "name" class = "form-control">
        </div>
        <div class = "form-group">
            <label>ImageURL</label>
            <input type = "text" placeholder = "imageURL" name = "image" class = "form-control">
        </div>
        <div class = "form-group">
            <label>Description</label>
            <input type = "text" placeholder = "description about your camp" name = "descrip" class = "form-control">
        </div>
        <div class = "form-group">
            <button class = "btn btn-primary btn-block"> Submit! </button>
        </div>
        <div>
            <a href = "/movies">Go back to movie stills page</a>
        </div>
    </form>
</div>


